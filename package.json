{
  "name": "extract-site-metadata",
  "version": "1.3.0",
  "description": "Metadata extractor for the sprawling web",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/data",
    "/dist",
    "/src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "collectCoverage": "jest --collectCoverage",
    "format": "prettier --write \"src/*.{js,ts,json,md}\"",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sc10ntech/extract-site-metadata.git"
  },
  "keywords": [
    "web",
    "seo",
    "metadata",
    "opengraph",
    "schema.org",
    "structured-data"
  ],
  "author": "info@sc10n.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sc10ntech/extract-site-metadata/issues"
  },
  "homepage": "https://github.com/sc10ntech/extract-site-metadata#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.7",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/cheerio": "0.22.22",
    "@types/dompurify": "^2.3.3",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.22",
    "@types/validator": "^13.7.1",
    "@types/xregexp": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "axios": "^0.26.1",
    "eslint": "^8.11.0",
    "esm": "^3.2.25",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jsdom": "^19.0.0",
    "prettier": "^2.6.0",
    "semantic-release": "^19.0.2",
    "semver": "^7.3.5",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "isomorphic-dompurify": "^0.18.0",
    "lodash": "^4.17.21",
    "schema-dts": "^1.1.0",
    "validator": "^13.5.2",
    "xregexp": "^5.1.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "jest": {
    "globals": {
      "pageData": true
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts)",
      "**/?(*.)+(spec|test).+(ts)"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "tabWidth": 2
  },
  "release": {
    "branches": [
      "master",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
